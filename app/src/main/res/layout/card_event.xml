<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_des_event_card"
        android:id="@+id/event_card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_event_image_view"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_des_event_cover_image"
                android:layout_height="@dimen/news_cover_image_size" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_12dp">

                <TextView
                    android:id="@+id/card_event_title_text_view"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_large"
                    android:gravity="start"
                    android:text="@string/placeholder_title"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/card_event_past_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_12dp"
                    android:gravity="end"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"
                    android:text="@string/placeholder_past_event_status"/>

            </LinearLayout>

            <TextView
                android:id="@+id/card_event_duration_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/margin_12dp"
                android:paddingStart="@dimen/margin_12dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_normal"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="@dimen/margin_12dp"
                android:text="@string/placeholder_event_duration"/>

            <TextView
                android:id="@+id/card_event_venue_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/margin_12dp"
                android:paddingStart="@dimen/margin_12dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_normal"
                android:drawableStart="@drawable/ic_place_black_24dp"
                android:drawablePadding="@dimen/margin_12dp"
                android:text="@string/placeholder_event_venue"/>

            <TextView
                android:id="@+id/card_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_12dp"
                android:textSize="@dimen/text_normal"
                android:text="@string/placeholder_event_description"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>