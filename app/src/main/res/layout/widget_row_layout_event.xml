<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent"
    android:id="@+id/widget_event_row">

    <TextView
        android:text="@string/placeholder_title"
        android:id="@+id/widget_event_row_title"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_large"
        android:textColor="#000"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/placeholder_event_duration"
            android:id="@+id/widget_event_row_start_datetime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_normal"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/placeholder_event_venue"
            android:id="@+id/widget_event_row_venue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/text_normal"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:id="@+id/widget_event_row_description"
        android:text="@string/placeholder_event_description"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="@dimen/text_small"
        android:ellipsize="end"/>


</LinearLayout>