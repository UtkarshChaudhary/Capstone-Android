<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_des_news_card"
        android:id="@+id/articleCardView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/card_news_image_view"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_des_news_cover_image"
                android:layout_height="@dimen/news_cover_image_size" />

            <TextView
                android:id="@+id/card_news_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_large"
                android:gravity="start"
                android:text="@string/placeholder_title"
                android:textColor="#000" />

            <TextView android:layout_width="match_parent"
                android:id="@+id/card_news_description"
                android:layout_margin="@dimen/margin_12dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>