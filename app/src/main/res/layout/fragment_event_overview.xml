<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_overview_duration_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_normal"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="@dimen/margin_12dp"
            android:text="@string/placeholder_event_duration"/>

        <TextView
            android:id="@+id/event_overview_venue_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_normal"
            android:drawableStart="@drawable/ic_place_black_24dp"
            android:drawablePadding="@dimen/margin_12dp"
            android:text="@string/placeholder_event_venue"/>

        <TextView
            android:id="@+id/event_overview_ticket_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_normal"
            android:drawableStart="@drawable/ic_local_activity_black_24dp"
            android:drawablePadding="@dimen/margin_12dp"
            android:text="Get Tickets"/>

        <TextView
            android:id="@+id/event_overview_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_normal"
            android:text="@string/placeholder_event_description"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
